{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "proxima",
  "version": "0.2.0",
  "identifier": "com.proxima.desktop",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:13375",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Proxima",
        "width": 1000,
        "height": 650,
        "minWidth": 700,
        "minHeight": 500,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "center": true,
        "dragDropEnabled": false,
        "theme": "Light",
        "backgroundColor": "#ffffff"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "windows": {
      "wix": null,
      "nsis": {
        "template": "windows/installer.nsi",
        "displayLanguageSelector": false,
        "installerIcon": "icons/icon.ico",
        "installMode": "currentUser",
        "languages": ["English"]
      }
    },
    "icon": ["icons/icon.ico"]
  }
}
